<html>
    <meta charset="utf-8" />
    <head>
        <script src="/socket.io/socket.io.js"></script>
        <style>
            body{
                background: lightgreen;
            }
            .maindiv{
                margin: auto;
                width: 800px;
                border: 5px solid blue;
                background: lightcyan;
            }
            .logdiv{
                margin: auto;
                width: 640px;
                padding: 80px;
            }
            .navdiv{
                margin: auto;
                width: 460px;
                padding: 170px;
            }
            .logbtn{
                margin: auto;
                background: purple;
                width: 200px;
                font-size: 20px;
                color: lightslategray;
            }
            .mainbtn{
                margin: auto;
                background: lime;
                width: 450px;
                font-size: 24px;
                color: red;
                padding: 30px;
            }
            .userinfo{
                text-align: center;
                font-size: 20px;
                color: grey;
                margin: auto;
            }
        </style>
    </head>
    <body>
        <div class="maindiv">
            <div class="logdiv">
                <% if (locals.logged) { %>
                    <a href="/logout"><button class="logbtn">Log out</button></a>
                <% }else{ %>
                    <a href="/login?returnUrl=/"><button class="logbtn">Sign in</button></a>
                    <a href="/register"><button class="logbtn">Sign up</button></a>
                <% } %>
            </div>
            <div class="navdiv">
                <a href="/job_offers"><button class="mainbtn">Job offers</button></a>
                <a href="/service_offers"><button class="mainbtn">Service offers</button></a>
                <a href="/post_offer"><button class="mainbtn">New offer</button></a>
                <a href="/home"><button class="mainbtn">My account</button></a>
            </div>
            <div class="userinfo">
                <% if (locals.msg) { %>
                    <%= locals.msg %>
                <% } %>
            </div>
            <% if (locals.username) { %>
                <div class="userinfo">You are logged in as <%= locals.username %></div>
            <% } %>
        </div>
    </body>
</html>